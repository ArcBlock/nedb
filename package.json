{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "wangshijun",
    "email": "shijun@arcblock.io",
    "url": "https://github.com/wangshijun"
  },
  "devDependencies": {
    "eslint": "^8.21.0",
    "@arcblock/eslint-config-base": "0.2.3",
    "@arcblock/eslint-config-ts": "0.2.3",
    "husky": "^4.2.3",
    "jsdoc": "^3.6.10",
    "lerna": "^5.5.0",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ArcBlock/nedb.git"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less,scss,json,graphql}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "build": "lerna run clean && lerna run build",
    "clean": "lerna clean",
    "test": "CI=1 lerna run test",
    "coverage": "CI=1 lerna run coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run precommit",
      "pre-push": "lint-staged && lerna run prepush"
    }
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
